<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.saadiqbal.tutorsideapplication.MainScreen"
    tools:showIn="@layout/app_bar_main_screen"
    android:orientation="vertical"
    >

    <fragment
        android:id="@+id/map_current"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        tools:context="com.example.saadiqbal.tutorsideapplication.MapsActivity"
        />

    <Button
        android:id="@+id/req_accept"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="#a3a3a3"
        android:enabled="false"

        android:text="Accept"
        android:textColor="#fff"
        android:textStyle="bold" />

</LinearLayout>
